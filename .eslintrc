{
  "extends": "airbnb-base",
  "env": {
    "commonjs": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "web3": true,
    "assert": true,
    "contract": true
  },
  "rules": {
    "max-len": [2, { "code": 150, "ignoreComments": true }],
    "quotes": [2, "double", "avoid-escape"],
    "no-console": "off",
    "no-underscore-dangle": "off",
    "no-await-in-loop": "off",
    "no-restricted-syntax": "off",
    "guard-for-in": "off",
    "function-paren-newline": "off",
    "comma-dangle": "off",
    "object-curly-newline": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  }
}
